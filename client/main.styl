@import 'nib'

*
  box-sizing: border-box

html, body
  height: 100%
  padding: 0
  margin: 0
  overflow: hidden

html.mousewheel
  overflow: scroll
  body
    overflow: scroll
  #viewport
    left: -1px
    right: -1px

html.mousewheel.touch
  overflow: hidden
  body
    overflow: scroll
    -webkit-overflow-scrolling: touch

body
  background: url('/images/background.png') 0 0
  font-family: Helvetica-Neue, Arial
  font-size: 14px

::-webkit-scrollbar
  display: none

::-webkit-scrollbar-track
  display: none

::-webkit-scrollbar-thumb
  display: none

#viewport
  bottom: 0
  left: 0
  position: absolute
  right: 0
  top: 0

#center
  height: 1px
  left: 50%
  position: absolute
  top: 50%
  transform: translate3d(0,0,0)
  width: 1px

.card
  border-radius: 10px
  background: #eee
  padding: 10px
  position: absolute
